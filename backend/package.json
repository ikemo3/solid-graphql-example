{
  "name": "solid-graphql-example-backend",
  "version": "0.0.1",
  "author": "Hideki Ikemoto",
  "type": "module",
  "scripts": {
    "codegen": "run-s codegen:*",
    "codegen:prisma": "tsx ./tools/generate-prisma-artifacts.ts",
    "codegen:graphql": "tsx ./tools/generate-graphql-schema.ts",
    "codegen:client": "graphql-codegen --config codegen.ts",
    "coverage": "vitest --coverage",
    "format": "run-s format:*",
    "format:prettier": "prettier --write .",
    "format:sort-package-json": "sort-package-json",
    "lint": "run-s lint:*",
    "lint:dep": "depcruise --config .dependency-cruiser.cjs .",
    "lint:eslint": "eslint . --ext .js --ext .ts --ext .tsx --ext .jsx --ext .cjs --ext .graphql",
    "lint:graphql": "tsx ./tools/lint-graphql-schema.ts",
    "lint:prettier": "prettier --check .",
    "lint:sort-package-json": "sort-package-json --check",
    "lint:tsc": "tsc --noEmit",
    "start": "tsx watch ./src/server.ts",
    "test": "pnpm codegen:client && vitest",
    "watch": "tsx ./tools/watch.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.588.0",
    "@aws-sdk/s3-request-presigner": "^3.588.0",
    "@escape.tech/graphql-armor": "^3.0.0",
    "@graphql-yoga/plugin-disable-introspection": "^2.3.1",
    "@graphql-yoga/redis-event-target": "^3.0.0",
    "@pothos/core": "^3.41.1",
    "@pothos/plugin-prisma": "^3.65.2",
    "@pothos/plugin-relay": "^3.46.0",
    "@pothos/plugin-scope-auth": "^3.22.0",
    "@prisma/client": "^5.14.0",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-oauth2-jwt-bearer": "^1.6.0",
    "filenamify": "^6.0.0",
    "graphql": "^16.8.1",
    "graphql-scalars": "^1.23.0",
    "graphql-yoga": "^5.3.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "prisma": "^5.14.0",
    "tsx": "^4.13.3"
  },
  "devDependencies": {
    "@escape.tech/graphql-armor-types": "^0.6.0",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/client-preset": "^4.2.6",
    "@graphql-eslint/eslint-plugin": "^3.20.1",
    "@graphql-tools/executor-http": "^1.0.9",
    "@graphql-tools/utils": "^10.2.1",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@mermaid-js/mermaid-cli": "^10.9.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vitest/coverage-istanbul": "^1.6.0",
    "chalk": "^5.3.0",
    "dependency-cruiser": "^16.3.2",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "execa": "^9.2.0",
    "graphql-schema-linter": "^3.0.1",
    "npm-run-all2": "^6.2.0",
    "prettier": "^3.3.1",
    "prisma-erd-generator": "^1.11.2",
    "sort-package-json": "^2.10.0",
    "testcontainers": "^10.9.0",
    "typescript": "^5.4.5",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  },
  "packageManager": "pnpm@9.1.4",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
