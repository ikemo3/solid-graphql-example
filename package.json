{
  "name": "solid-graphql-example",
  "version": "0.0.1",
  "author": "Hideki Ikemoto",
  "type": "module",
  "scripts": {
    "format": "run-s format:*",
    "format:prettier": "prettier --write .",
    "format:sort-package-json": "sort-package-json",
    "lint": "run-s lint:*",
    "lint:env": "tsx ./tools/check-env-names.ts",
    "lint:graphql-schema": "tsx ./tools/check-graphql-schema.ts ",
    "lint:prettier": "prettier --check .",
    "lint:sort-package-json": "sort-package-json --check",
    "lint:spellcheck": "cspell '**' --no-progress --dot --gitignore",
    "watch": "tsx ./tools/watch.ts"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "chokidar": "^3.6.0",
    "cspell": "^8.7.0",
    "execa": "^8.0.1",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.2.5",
    "sort-package-json": "^2.10.0",
    "tsx": "^4.7.3",
    "yaml": "^2.4.1"
  },
  "packageManager": "pnpm@8.15.7"
}
